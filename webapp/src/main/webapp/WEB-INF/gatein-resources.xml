<gatein-resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_resources_1_3 http://www.gatein.org/xml/ns/gatein_resources_1_3"
  xmlns="http://www.gatein.org/xml/ns/gatein_resources_1_3">

  <!-- Javascript for Smart Activity support -->
  <module>
    <name>smartactivitystream</name>
    <load-group>smartactivitystreamGRP</load-group>
    <script>
      <path>/js/smartactivitystream.js</path>
    </script>

    <depends>
      <module>jquery</module>
      <as>$</as>
    </depends>
  </module>

  <!-- CSS for Smart Activity Stream support -->
  <portlet-skin>
    <application-name>smartactivitystream</application-name>
    <portlet-name>SmartActivityStreamPortlet</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/smartactivitystream.css</css-path>
    <overwrite>true</overwrite>
  </portlet-skin>

  <portlet-skin>
    <application-name>smartactivitystream</application-name>
    <portlet-name>SmartActivityStreamPortlet</portlet-name>
    <skin-name>Enterprise</skin-name>
    <css-path>/skin/smartactivitystream.css</css-path>
    <overwrite>true</overwrite>
  </portlet-skin>

</gatein-resources>